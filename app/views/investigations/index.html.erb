<%# Adapted from PATSv3 %>
<%if @open_investigations.empty?%>
    <h4>No open cases at this time</h4>
<%else%>
    <h4>Open Investigations in GCPD</h4>
    <table class="striped highlight">
        <thead>
            <th>Title</th>
            <th> Crime Location </th>
            <th> Date open </th>
            <th> Date closed </th>
            <th> Solved </th>
            <th> Batman Involved </th>
            <th> Officers Assigned </th>
        </thead>
    <%for inv in @open_investigations%>
        <tr>
            <td><%= link_to inv.title, investigation_path(inv) %></td>
            <td><%= inv.crime_location %></td>
            <td><%= inv.date_opened.strftime("%m/%d/%y")%></td>
            <td><%= inv.date_closed.nil? ? "None" : inv.date_closed.strftime("%m/%d/%y") %></td>
            <td><%= inv.solved ? "Yes" : "No" %></td>
            <td><%= inv.batman_involved ? "Yes" : "No" %></td>
            <td><%= inv.officers.count %></td>
        </tr>
    <% end %>
    </table>
    <br>
<% end%>